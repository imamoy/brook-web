mixin main-card(cardCss,img,href,time,title,text)
    a.d-block.mx-2.my-3(href=href)
        .card.main-card(class=cardCss)
            .card-img-top
                img(src=img alt='圖片')
            .card-body
                span.t-primary.f-mini.f-en=time
                h3.card-title.t-dark.mt-1=title
                p.card-text=text
                span.t-primary.f-mini.f-en.more MORE

mixin activity-card(img,href,time,title,text)
    a(href=href)
        .card.activity-card
            img.card-img-top(src=img alt='圖片')
            .card-body
                .row
                    .col-12.col-lg-9 
                        h3.card-title=title
                    .col-12.col-lg-3.text-lg-right
                        span.f-mini.f-en=time
                p.card-text=text

mixin page-navigation
    nav.mt-2.pt-md-3(aria-label="Page navigation")
        ul.pagination.justify-content-center
            li.page-item.disabled
                a.page-link(href="#" tabindex="-1" aria-disabled="true")
                    i.icon-arrow-l
            li.page-item.active
                a.page-link(href="#") 1
            li.page-item
                a.page-link(href="#") 2
            li.page-item
                a.page-link(href="#") 3
            li.page-item
                a.page-link(href="#")
                    i.icon-arrow-r

mixin collapse-item(q,a)
    .collapse-item 
        .collapse-item-title.d-flex.align-items-center.justify-content-between
            h5.mb-0=q
            i.icon-add.open
            i.icon-less.close
        .collapse-item-inner
            p.mb-0=a

mixin feedback-item(img,name,text,link)
    a.feedback-item.d-block(href=link, target='_blank')
        .row.no-gutters
            .col-12.col-md-5
                .feedback-item_pic
                    img(src=img, alt='使用者照片')
                .feedback-item_name=name
            .col-12.col-md-7
                .feedback-item_text
                    p.mb-0=text

