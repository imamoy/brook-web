//- index.pug
extends ./include/layout.pug

block content
    main#page.wrapper
        .page-hero
            .container
                .page-hero_text
                    h2.f-heroTitle-xs.text-center 最新消息
                .page-hero_img
                    img(src='styles/images/news-banner.png', alt='情境圖')
        #page-nav
            ul.nav.justify-content-center
                li.nav-item.news-link
                    a.nav-link.active(href='news') 品牌消息
                li.nav-item.medias-link
                    a.nav-link(href='medias') 媒體報導
                li.nav-item.activities-link
                    a.nav-link(href='unboxes') 開箱介紹
                li.nav-item.unboxes-link
                    a.nav-link(href='activities') 活動特區

        article.page-inner
            .filter-row.mb-3.mb-lg-4
                .container
                    .row.justify-content-center
                        .col-6.col-md-3.col-xl-2
                            .select-box
                                .form-group
                                    select.form-control.main-select
                                        option 類別
                                        option 居家安全
                        .col-6.col-md-3.col-xl-2
                            .select-box
                                .form-group
                                    select.form-control.main-select
                                        option 產品
                                        option WIRECARE 宅電防護員 
                                        option BROOK紫外線消毒盒
                        .col-12.col-md-3.col-xl-2.mt-4.mt-md-0
                            .input-group.search-input
                                input.form-control(type="text" placeholder="搜尋商品" aria-describedby="button-search")
                                .input-group-append
                                    button#button-search(type="button")
                                        i.icon-magnifier
            section
                .container
                    .row#news-inner
                        .col-12.col-lg-4.my-lg-2
                            //- +main-card('','styles/images/pic-1.jpg','new')
            +page-navigation