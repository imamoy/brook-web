extends include/layout.pug

block content
    main#page.wrapper
        .page-hero
            .container
                .page-hero_text
                    h2.f-heroTitle-xs.text-center 最新ニュース
                .page-hero_img
                    img(src='../styles/images/news-banner.png', alt='情境圖')
        #page-nav
            ul.nav.justify-content-center
                li.nav-item.medias-link
                    a.nav-link(href='medias') メディア紹介
                li.nav-item.unboxes-link
                    a.nav-link.active(href='activities') イベント
                li.nav-item.activities-link
                    a.nav-link(href='unboxes') 開封の儀
