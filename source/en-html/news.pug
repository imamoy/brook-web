extends include/layout.pug

block content
    main#page.wrapper
        .page-hero
            .container
                .page-hero_text
                    h2.f-heroTitle-xs.text-center What’s New
                .page-hero_img
                    img(src='../styles/images/news-banner.png', alt='情境圖')
        #page-nav
            ul.nav.justify-content-center
                li.nav-item.medias-link
                    a.nav-link.active(href='news') News
                li.nav-item.activities-link
                    a.nav-link(href='activities') Events
                li.nav-item.unboxes-link
                    a.nav-link(href='unboxes') Unboxing
        article.page-inner
            .filter-row.mb-3.mb-lg-4
                .container
                    .row.justify-content-center
                        .col-6.col-md-3.col-xl-2
                            .select-box
                                .form-group
                                    select.form-control.main-select
                                        option Category
                                        option Home Safety
                        .col-6.col-md-3.col-xl-2
                            .select-box
                                .form-group
                                    select.form-control.main-select
                                        option Products
                                        option WIRECARE
                        .col-12.col-md-3.col-xl-2.mt-4.mt-md-0
                            .input-group.search-input
                                input.form-control(type="text" placeholder="Search Products" aria-describedby="button-search")
                                .input-group-append
                                    button#button-search(type="button")
                                        i.icon-magnifier
            section
                .container
                    .row#medias-inner
                        .col-12.col-lg-4.my-lg-2
                            +main-card('','../styles/images/news/en/new-02/list.png','new-2','2021/11/12','Year 2021-2022 D&B TOP Elite SME Award for ZEROPLUS','So honor to share that ZEROPLUS | Brook Livin is awarded “D&B TOP Elite SME Award” in year 2021-2022.')
                        .col-12.col-lg-4.my-lg-2
                            +main-card('','../styles/images/news/en/new-01/00_list.png','new-1','2021/10/19','ZEROPLUS steps into household appliance with its expertise in embedded systems products','Starting from 2020, COVID-19 widespread hits the world, and it also grows the demand of work-from-…')
            //- +page-navigation